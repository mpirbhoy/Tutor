<% include ../partials/head %>

<% include ../partials/nav %>

<body>
<div class="container">
    <div class="panel panel-default form-signin">
        <div class="panel-heading">
            <h2 class="form-signin-heading">SIGN UP</h2>
        </div>
        <div class="panel-body">

            <form method="POST">

                <div class="form-group">
                    <label for="email" class="control-label">Email</label>
                    <input type="email" class="form-control form-width" name="email" placeholder="email@example.com" required autofocus>
                </div>

                <div class="form-group">
                    <label for="displayname" class="control-label">Display Name</label>
                    <input type="text" class="form-control form-width" name="displayName" placeholder="Name" required>
                </div>


                <div class="form-group">
                    <label for="password" class="control-label">Password</label>
                    <input type="password" class="form-control form-width" name="password" placeholder="Password" required>
                    <input style="margin-top:5px" type="password" class="form-control form-width" name="password-confirm" placeholder="Confirm Password" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
                    <a href="/login" class="new">Login</a>
                </div>
            </form>
        </div>
    </div>

</div>
</body>